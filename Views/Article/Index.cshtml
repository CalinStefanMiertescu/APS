@using System.Security.Claims
@model APS.Models.ViewModels.ArticleListViewModel
@{
    ViewData["Title"] = "Articles";
}

<div class="articles-container">
    <div class="articles-header">
        <h1 class="articles-title">Articles</h1>
        @if (Model.IsAdmin || Model.IsModerator)
        {
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Article
            </a>
        }
    </div>

    <div class="articles-grid">
        @foreach (var article in Model.Articles)
        {
            <div class="article-card">
                @if (!string.IsNullOrEmpty(article.CoverImageUrl))
                {
                    <div class="article-cover">
                        <img src="@article.CoverImageUrl" alt="@article.Title">
                    </div>
                }
                <div class="article-content">
                    <h2 class="article-title">@article.Title</h2>
                    <div class="article-meta">
                        <span class="author">
                            <i class="fas fa-user"></i> @article.AuthorName
                        </span>
                        <span class="date">
                            <i class="fas fa-calendar"></i> @article.PublishedAt.ToString("MMMM dd, yyyy")
                        </span>
                    </div>
                    <div class="article-text">
                        @Html.Raw(article.Content.Length > 300 ? article.Content.Substring(0, 300) + "..." : article.Content)
                    </div>
                    <div class="article-actions">
                        <a href="@Url.Action("Details", new { id = article.Id })" class="btn btn-primary">
                            Read More
                        </a>
                        @if (Model.IsAdmin || (Model.IsModerator && article.AuthorId == User.FindFirst(ClaimTypes.NameIdentifier)?.Value))
                        {
                            <a href="@Url.Action("Edit", new { id = article.Id })" class="btn btn-secondary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        }
                        @if (Model.IsAdmin)
                        {
                            if (!article.IsPublished)
                            {
                                <form asp-action="Publish" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@article.Id" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check"></i> Publish
                                    </button>
                                </form>
                            }
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this article?');">
                                <input type="hidden" name="id" value="@article.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/articles.css" />
} 