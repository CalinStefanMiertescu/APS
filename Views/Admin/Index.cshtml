@model APS.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="modern-admin-container">
    <div class="modern-admin-header">
        <h1 class="modern-admin-title">Admin Dashboard</h1>
    </div>

    <div class="modern-stats-grid">
        <div class="modern-stat-card glass-card">
            <div class="modern-stat-icon bg-cyan">
                <i class="fas fa-users"></i>
            </div>
            <div class="modern-stat-info">
                <h3>Total Members</h3>
                <p class="modern-stat-value">@Model.TotalMembersCount</p>
            </div>
        </div>
        <div class="modern-stat-card glass-card">
            <div class="modern-stat-icon bg-green">
                <i class="fas fa-user-check"></i>
            </div>
            <div class="modern-stat-info">
                <h3>Active Members</h3>
                <p class="modern-stat-value">@Model.ActiveMembersCount</p>
            </div>
        </div>
        <div class="modern-stat-card glass-card">
            <div class="modern-stat-icon bg-yellow">
                <i class="fas fa-user-clock"></i>
            </div>
            <div class="modern-stat-info">
                <h3>Pending Approvals</h3>
                <p class="modern-stat-value">@Model.PendingApprovalsCount</p>
            </div>
        </div>
        <div class="modern-stat-card glass-card">
            <div class="modern-stat-icon bg-red">
                <i class="fas fa-user-times"></i>
            </div>
            <div class="modern-stat-info">
                <h3>Non-paying Members</h3>
                <p class="modern-stat-value">@Model.NonPayingMembersCount</p>
            </div>
        </div>
    </div>

    <div class="modern-admin-grid">
        <!-- Pending Approvals -->
        <div class="modern-admin-card glass-card">
            <h2 class="modern-card-title">Pending Approvals</h2>
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.PendingUsers)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.JournalistType</td>
                                <td>
                                    <button class="modern-btn modern-btn-success btn-sm" onclick="approveUser('@user.Id')">
                                        <i class="fas fa-check"></i> Approve
                                    </button>
                                    <button class="modern-btn modern-btn-danger btn-sm" onclick="rejectUser('@user.Id')">
                                        <i class="fas fa-times"></i> Reject
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Membership Changes -->
        <div class="modern-admin-card glass-card">
            <h2 class="modern-card-title">Membership Changes</h2>
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Changes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.UsersWithChanges)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>
                                    <button class="modern-btn modern-btn-info btn-sm" onclick="viewChanges('@user.Id')">
                                        <i class="fas fa-eye"></i> View Changes
                                    </button>
                                </td>
                                <td>
                                    <button class="modern-btn modern-btn-success btn-sm" onclick="approveChanges('@user.Id')">
                                        <i class="fas fa-check"></i> Approve
                                    </button>
                                    <button class="modern-btn modern-btn-danger btn-sm" onclick="rejectChanges('@user.Id')">
                                        <i class="fas fa-times"></i> Reject
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Expiring Memberships -->
        <div class="modern-admin-card glass-card">
            <h2 class="modern-card-title">Expiring Memberships</h2>
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Expires</th>
                            <th>Days Left</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.ExpiringMemberships)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.MembershipExpiresAt?.ToShortDateString()</td>
                                <td>@((user.MembershipExpiresAt - DateTime.UtcNow)?.Days)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Manage Types -->
        <div class="modern-admin-card glass-card">
            <h2 class="modern-card-title">Manage Types</h2>
            <div class="modern-type-management">
                <div class="modern-type-section">
                    <h3>Journalist Types</h3>
                    <div class="modern-type-list">
                        @foreach (var type in Model.JournalistTypes)
                        {
                            <div class="modern-type-item">
                                <span>@type</span>
                                <button class="modern-btn modern-btn-danger btn-sm" onclick="deleteType('@type', 'journalist')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                    <div class="modern-add-type">
                        <input type="text" id="newJournalistType" class="modern-form-control" placeholder="New type">
                        <button class="modern-btn modern-btn-primary" onclick="addType('journalist')">
                            <i class="fas fa-plus"></i> Add
                        </button>
                    </div>
                </div>
                <div class="modern-type-section">
                    <h3>Publications</h3>
                    <div class="modern-type-list">
                        @foreach (var pub in Model.Publications)
                        {
                            <div class="modern-type-item">
                                <span>@pub</span>
                                <button class="modern-btn modern-btn-danger btn-sm" onclick="deleteType('@pub', 'publication')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                    <div class="modern-add-type">
                        <input type="text" id="newPublication" class="modern-form-control" placeholder="New publication">
                        <button class="modern-btn modern-btn-primary" onclick="addType('publication')">
                            <i class="fas fa-plus"></i> Add
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- View Changes Modal -->
